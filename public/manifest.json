{
  "manifest_version": 3,
  "name": "Scoop â€“ Inline Prediction Trading",
  "short_name": "Scoop",
  "version": "0.1.0",
  "description": "Trade prediction markets inline on Twitter/X. Detect markets, sign orders, and submit trades without leaving your feed.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "windows",
    "tabs"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "https://probable.markets/*",
    "https://app.predict.fun/*",
    "https://app.opinion.trade/*"
  ],
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "js": ["content/ethereumBridge.js"],
      "run_at": "document_start",
      "world": "MAIN",
      "all_frames": false
    },
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "js": ["content/contentScript.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Scoop",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
